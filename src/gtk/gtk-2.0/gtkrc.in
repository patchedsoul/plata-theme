#
# Colour scheme
#
gtk-color-scheme = "base_color:#ffffff\nbg_color:#f8f8f8"
gtk-color-scheme = "text_color:#111111\nfg_color:#111111"
gtk-color-scheme = "selected_bg_color:@SEL_BG@\nselected_fg_color:#ffffff"
gtk-color-scheme = "selected_label:@SEL_LB@"
gtk-color-scheme = "tooltip_bg_color:#424242\ntooltip_fg_color:#f5f5f5"
gtk-color-scheme = "link_color:@LKN_FG@\nvisited_link_color:@LKV_FG@"
gtk-color-scheme = "inverted_dark_color:#080808\ninverted_fg_color:#f5f5f5"
gtk-color-scheme = "scroll_slider_color:#c7c7c7\nscroll_slider_prelight_color:#a5a5a5"
gtk-color-scheme = "panel_bg_color:#000000"
gtk-color-scheme = "dark_color:#e7e7e7"
gtk-color-scheme = "solid_white:#ffffff"
gtk-color-scheme = "accent_bg_color:@ACC_BG@\naccent_fg_color:@ACC_FG@"
gtk-color-scheme = "inverted_accent_fg_color:@ACI_FG@"

#
# Default Colours
#
style "default_colors" {
  text[NORMAL] = mix(0.87, @text_color, @base_color)
  text[PRELIGHT] = @text_color
  text[ACTIVE] = @selected_fg_color
  text[INSENSITIVE] = mix(0.28, @text_color, @base_color)
  text[SELECTED] = @selected_fg_color

  base[NORMAL] = @base_color
  base[PRELIGHT] = @base_color
  base[ACTIVE] = @selected_bg_color
  base[INSENSITIVE] = @base_color
  base[SELECTED] = @selected_bg_color

  fg[NORMAL] = mix(0.87, @fg_color, @bg_color)
  fg[PRELIGHT] = @fg_color
  fg[ACTIVE] = @fg_color
  fg[INSENSITIVE] = mix(0.28, @fg_color, @bg_color)
  fg[SELECTED] = @selected_fg_color

  bg[NORMAL] = @bg_color
  bg[PRELIGHT] = mix(0.12, @fg_color, @bg_color)
  bg[ACTIVE] = mix(0.25, @fg_color, @bg_color)
  bg[INSENSITIVE] = @bg_color
  bg[SELECTED] = @selected_bg_color
}

#
# Imports
#
include "common@VARIANT@.rc"
include "3rd-party@VARIANT@.rc"
